# =============================================================================
# BDOCS Prison Information System - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env files to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
FLASK_ENV=production                    # development | staging | production
APP_HOST=0.0.0.0                        # Host to bind to
APP_PORT=5000                           # Port to bind to
SECRET_KEY=your-secret-key-here         # Application secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost                 # Database host
POSTGRES_PORT=5432                      # Database port
POSTGRES_USER=postgres                  # Database user
POSTGRES_PASSWORD=postgres              # Database password (CHANGE IN PRODUCTION)
POSTGRES_DB=bdocs                       # Database name

# Full database URL (optional - overrides individual settings)
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_HOST=localhost                    # Redis host
REDIS_PORT=6379                         # Redis port
REDIS_PASSWORD=                         # Redis password (optional)
# REDIS_URL=redis://localhost:6379      # Full Redis URL (optional)

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-here     # JWT signing key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_ACCESS_TOKEN_EXPIRES=3600           # Access token expiry in seconds (1 hour)
JWT_REFRESH_TOKEN_EXPIRES=604800        # Refresh token expiry in seconds (7 days)

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_DEFAULT=100/minute           # Default rate limit for API endpoints
RATE_LIMIT_STORAGE_URL=redis://localhost:6379  # Storage backend for rate limits

# -----------------------------------------------------------------------------
# LDAP Authentication (Optional)
# -----------------------------------------------------------------------------
LDAP_HOST=                              # LDAP server host
LDAP_PORT=389                           # LDAP server port
LDAP_BASE_DN=                           # LDAP base DN
LDAP_BIND_DN=                           # LDAP bind DN
LDAP_BIND_PASSWORD=                     # LDAP bind password

# -----------------------------------------------------------------------------
# File Storage (MinIO/S3)
# -----------------------------------------------------------------------------
MINIO_HOST=localhost                    # MinIO host
MINIO_PORT=9000                         # MinIO port
MINIO_ACCESS_KEY=                       # MinIO access key
MINIO_SECRET_KEY=                       # MinIO secret key
MINIO_BUCKET=bdocs-documents            # Default bucket name
MINIO_SSL=false                         # Use SSL for MinIO

# -----------------------------------------------------------------------------
# Sentry Error Tracking (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=                             # Sentry DSN for error tracking
SENTRY_ENVIRONMENT=production           # Sentry environment tag

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO                          # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json                         # json | text

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000      # Comma-separated list of allowed origins
CORS_ALLOW_CREDENTIALS=true             # Allow credentials in CORS requests
